{
  "manifest_version": 2,
  "name": "Cross Stitcher",
  "version": "0.2.0",
  "description": "Adds colourblind-friendly patterns to backgrounds on Monday",
  "icons": {
    "48": "icons/48.png"
  },
  "permissions": ["activeTab", "scripting"],
  "content_scripts": [
    {
      "matches": ["*://*.monday.com/*"],
      "js": ["main.js"]
    }
  ],
  "browser_action": {
    "default_icon": "icons/48.png",
    "default_title": "Cross Stitcher",
    "default_popup": "popup.html"
  }
}
